<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence/orm https://jakarta.ee/xml/ns/persistence/orm_3_2.xsd"
                 version="3.2">
  <embeddable class="com.pluralsight.persistence.customer.model.Address"/>
  <entity class="com.pluralsight.persistence.customer.model.Customer"/>
  <entity class="com.pluralsight.persistence.customer.model.OrderLine"/>
  <entity class="com.pluralsight.persistence.customer.model.PurchaseOrder"/>
  <entity class="com.pluralsight.persistence.customer.model.User"/>
  <entity class="com.pluralsight.persistence.supplier.model.Supplier">
    <table name="t_suppliers"/>
    <attributes>
      <id name="id">
        <generated-value strategy="AUTO"/>
      </id>
      <basic name="companyName">
        <column name="company_name" length="100" nullable="false"/>
      </basic>
      <basic name="contactName">
        <column name="contact_name" length="100"/>
      </basic>
      <basic name="contactEmail">
        <column name="contact_email" length="255"/>
      </basic>
      <basic name="country">
        <column length="50"/>
      </basic>
      <basic name="createdDate">
        <column name="created_date" nullable="false"/>
      </basic>
    </attributes>
  </entity>

</entity-mappings>
